@model Magazine.Models.Inspector

@{
    ViewBag.Title="Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
       
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <h5><b>ФИО:</b></h5>
               </dt>
    
            <dd>
                <h5>
                    @Html.DisplayFor(model => model.LastName)
                    @Html.DisplayFor(model => model.FirstName)
                    @Html.DisplayFor(model => model.MiddleName)
                </h5>
            </dd>
    
            <dt>
                <h5><b>Подразделение:</b></h5>
            </dt>
    
            <dd>
                <h5>@Html.DisplayFor(model => model.Division.Name)</h5>
            </dd>
    
        </dl>
    </div>
    <p>
        @Html.ActionLink("Назад", "Index")
    </p>
</body>
</html>
<h4><b>Список проведенных проверок</b></h4>
<table class="table">
    <tr>
        <th>Дата</th>
        <th>Номер протокола</th>
        <th>Название предприятия</th>
    </tr>

    
    @foreach (var T in Model.Revisions)
    {
    <tr>
        <td>@T.RevisionDate</td>
        <td>@T.RevisionID</td>
        <td>@T.Enterprise.PropForm @T.Enterprise.Name</td>
    </tr>
    }



</table>





